<fable>
 <page background="bg (1).png">
   
    <agent text="RENASCIMENTO" font-size="30" x="10" y="450" width="400" color="darkblue"/>
    <agent text="Era uma vez um cidadão chamado Cleiton que contraiu o vírus da Covid-19, antes que seja tarde, parte em busca de uma cura!" font-size="15" x="10" y="320" width="180"/>
    <agent img="grama.png" x="10" y="0" width="100" height="100"/>
    <agent img="grama 2.png" x="110" y="0" width="100" height="100"/>
    <agent img="grama 2.png" x="160" y="0" width="100" height="100"/>
    <agent img="grama 2.png" x="210" y="0" width="100" height="100"/>
    <agent img="grama 2.png" x="260" y="0" width="100" height="100"/>
    <agent img="grama 2.png" x="310" y="0" width="100" height="100"/>
    <agent img="grama 2.png" x="360" y="0" width="100" height="100"/>
    <agent img="grama 2.png" x="410" y="0" width="100" height="100"/>
    <agent img="Tree_2.png" x="210" y="100" width="200" height="200"/>
    <agent img="Bush (1).png" x="210" y="100" width="100" height="50"/>
    <agent img="download.png" x="10" y="99" width="100" height="150"/>
    <agent img="Sign_2.png" x="440" y="100" width="50" height="50" on-touch="_NEXT_PAGE"/>
   
</page>
 <page background="noite_dark.png">
     
    <agent text="No caminho, Cleiton se depara com diversas lápides de guerreiros que perderam a batalha contra o vírus. Pode ter algo em um desses túmulos!" font-size="15" x="10" y="360" width="200" color="white" on-trigger="explosivo">
      <explosivo text="Isso pode ajudar a liberar o caminho!" font-size="15" x="10" y="450" width="150" color="white"/>
    </agent>
     
    <agent img="Tile (2).png" x="0" y="0" width="100" height="100"/>
    <agent img="Tile (2).png" x="10" y="0" width="100" height="100"/>
    <agent img="Tile (2).png" x="110" y="0" width="100" height="100"/>
    <agent img="Tile (2).png" x="160" y="0" width="100" height="100"/>
    <agent img="Tile (2).png" x="210" y="0" width="100" height="100"/>
    <agent img="Tile (2).png" x="260" y="0" width="100" height="100"/>
    <agent img="Tile (2).png" x="310" y="0" width="100" height="100"/>
    <agent img="Tile (2).png" x="360" y="0" width="100" height="100"/>
    <agent img="Tile (2).png" x="410" y="0" width="100" height="100"/>
    <agent img="Sign_2.png" x="440" y="100" width="50" height="50" on-touch="_NEXT_PAGE"/> 
     
    <agent img="TombStone (2).png" x="400" y="100" width="150" height="150" drop-zone="tumulo">
      <tumulo x="1000"/>
    </agent>
     
    <agent img="TombStone (1).png" x="330" y="100" width="65" height="70"/>
     
    <agent img="Barrel (1).png" x="265" y="100" width="50" height="50" draggable="true" on-drop="tumulo" on-zone="barril" on-trigger="barril">
     <barril x="1000"/>
    </agent>
      
     <agent img="TombStone (1).png" x="260" y="100" width="65" height="70" on-touch="explosivo">
      <explosivo x="1000"/>
    </agent>
      
    <agent img="TombStone (1).png" x="200" y="100" width="65" height="70"/>
    <agent img="Skeleton.png" x="260" y="0" width="50" height="30"/>
    <agent img="Bone (3).png" x="100" y="0" width="100" height="100"/>
    <agent img="Bone (3).png" x="300" y="0" width="100" height="100"/>
    <agent img="Bone (3).png" x="500" y="70" width="100" height="100"/>
    <agent img="download.png" x="60" y="99" width="100" height="150"/>
    
     
   </page>
 <page background="bg.png">
    
    <agent text="Depois de uma longa jornada, quando tudo parecia perdido, Cleiton encontra aquilo que pode ser sua salvação." font-size="15" x="10" y="400" width="200" on-trigger="unlocked">
      <unlocked text="A porta destravou! O que tem ali dentro?" font-size="15" x="10" y="430" width="150"/>
    </agent>
    
    <agent img="1.png" x="10" y="0" width="100" height="100"/>
    <agent img="2.png" x="110" y="0" width="100" height="100"/>
    <agent img="2.png" x="210" y="0" width="100" height="100"/>
    <agent img="2.png" x="310" y="0" width="100" height="100"/>
    <agent img="2.png" x="410" y="0" width="100" height="100"/>
    <agent img="5.png" x="400" y="100" width="100" height="100"/>
    <agent img="4.png" x="300" y="100" width="100" height="100"/>
    <agent img="1.png" x="300" y="200" width="100" height="100"/>
    <agent img="2.png" x="400" y="200" width="100" height="100"/>
    
    <agent img="switchLock.png" x="340" y="100" width="20" height="75" on-touch="unlocked">		 
      <unlocked img="switchUnlocked.png" />
    </agent>
    
    <agent img="locked.png" x="375" y="100" width="75" height="110" on-trigger="unlocked">
      <unlocked img="unlocked.png" on-touch="open" />
      <open img="open.png" on-touch="_NEXT_PAGE" />
    </agent>
    
    <agent img="download.png" x="60" y="99" width="100" height="150"/>
    
  </page>
 <page background="bg_lab.png">
    <agent text="Um laboratorio de pesquisas. Talvez tenha uma vacina para a COVID-19 nessa caixa. Mas como irei abrir?" font-size="15" x="10" y="400" width="200" color="white" on-trigger="new-man">
      <new-man text="Os sintomas do vírus passaram, conseguimos uma cura!" font-size="15" x="10" y="430" width="200" color="white"/>
    </agent>
    
    <agent img="download.png" x="10" y="99" width="100" height="150" drop-zone="new-man">
      <new-man img="man 2.png" x="5" y="97" width="160" height="180"/>
    </agent>
    
    <agent img="floor.png" x="0" y="0" width="100" height="100"/>
    <agent img="floor2.png" x="100" y="0" width="100" height="100"/>
    <agent img="floor2.png" x="200" y="0" width="100" height="100"/>  
    <agent img="floor2.png" x="300" y="0" width="100" height="100"/>
    <agent img="floor2.png" x="400" y="0" width="100" height="100"/>
    
    <agent img="portion.png" x="250" y="100" width="50" height="50" draggable="true" on-drop="new-man" on-zone="desaparecer" on-trigger="desaparecer">
      <desaparecer x="1000"/>
    </agent>
    
    <agent img="Box.png" x="250" y="100" width="50" height="50" drop-zone="cut-box">
      <cut-box img="portion.png" x="1000"/>
    </agent>
    
    <agent img="Saw.png" x="100" y="100" width="50" height="50" draggable="true"  on-drop="cut-box" on-zone="disappear" on-trigger="disappear">
      <disappear x="-1000"/>
    </agent>
    
    <agent img="unlocked.png" x="400" y="100" width="75" height="110" on-trigger="new-man">
      <new-man img="open.png" on-touch="_NEXT_PAGE"/>
    </agent>
    
    </page>
 <page background="bg (1).png">
    
    <agent text="Finalmente posso descançar depois de uma longa jornada!" font-size="15" x="10" y="420" width="180"/>
    <agent img="grama.png" x="-10" y="0" width="100" height="100"/>
    <agent img="grama 2.png" x="80" y="0" width="100" height="100"/>
    <agent img="grama 2.png" x="160" y="0" width="100" height="100"/>
    <agent img="grama 2.png" x="210" y="0" width="100" height="100"/>
    <agent img="grama 2.png" x="260" y="0" width="100" height="100"/>
    <agent img="grama 2.png" x="310" y="0" width="100" height="100"/>
    <agent img="grama 2.png" x="360" y="0" width="100" height="100"/>
    <agent img="grama 2.png" x="400" y="0" width="100" height="100"/>
    <agent img="man 1.png" x="80" y="90" width="100" height="200" on-touch="_NEXT_PAGE"/>
    
  </page> 
 <page background="bg (1).png">
    
    <agent text="FIM!" font-size="70" x="200" y="250" width="180"/>
    <agent img="man 1.png" x="80" y="90" width="100" height="200"/>
    <agent img="grama.png" x="-10" y="0" width="100" height="100"/>
    <agent img="grama 2.png" x="80" y="0" width="100" height="100"/>
    <agent img="grama 2.png" x="160" y="0" width="100" height="100"/>
    <agent img="grama 2.png" x="210" y="0" width="100" height="100"/>
    <agent img="grama 2.png" x="260" y="0" width="100" height="100"/>
    <agent img="grama 2.png" x="310" y="0" width="100" height="100"/>
    <agent img="grama 2.png" x="360" y="0" width="100" height="100"/>
    <agent img="grama 2.png" x="400" y="0" width="100" height="100"/>
    
  </page>
</fable>